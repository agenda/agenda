{
  "name": "agenda",
  "version": "6.0.0",
  "description": "Light weight job scheduler for Node.js",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./testing": {
      "types": "./test/shared/index.ts",
      "import": "./test/shared/index.ts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc -b",
    "typecheck": "tsc -b && tsc -p tsconfig.test.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:debug": "DEBUG=agenda:**,-agenda:internal:** vitest run",
    "test:debug-all": "DEBUG=agenda:** vitest run"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/agenda/agenda"
  },
  "keywords": [
    "job",
    "jobs",
    "cron",
    "delayed",
    "scheduler",
    "runner"
  ],
  "author": "Ryan Schmukler <ryan@slingingcode.com> (http://slingingcode.com/), Simon Tretter <s.tretter@gmail.com>, Mikael Korpela <mikael@ihminen.org>, Alexis Tyler <xo@wvvw.me>, Vasyl Boroviak <vasyl@flash-fx.com.au>, Haris Sulaiman <haris@cloodot.com>, Loris Guignard <loris.guignard@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/agenda/agenda/issues"
  },
  "dependencies": {
    "cron-parser": "^5.0.0",
    "date.js": "~0.3.3",
    "debug": "^4.4.0",
    "human-interval": "~2.0.1",
    "luxon": "^3.2.1"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/human-interval": "^1.0.0",
    "@types/luxon": "^3.4.0",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.1.0",
    "sinon": "^19.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "vitest": "^3.1.0"
  }
}
