{
  "name": "@agendajs/redis-backend",
  "version": "1.0.0-pre",
  "description": "Redis backend for Agenda job scheduler with Pub/Sub notification support",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc -b",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:debug": "DEBUG=agenda:**,-agenda:internal:** vitest run",
    "test:redis": "REDIS_TEST_URL=redis://localhost:6379 vitest run",
    "test:redis:watch": "REDIS_TEST_URL=redis://localhost:6379 vitest",
    "docker:up": "docker compose up -d --wait",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "test:docker": "npm run docker:up && npm run test:redis; npm run docker:down"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/agenda/agenda"
  },
  "keywords": [
    "agenda",
    "job",
    "scheduler",
    "redis",
    "pubsub",
    "notifications"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/agenda/agenda/issues"
  },
  "dependencies": {
    "debug": "^4.4.0",
    "ioredis": "^5.4.0"
  },
  "peerDependencies": {
    "agenda": "workspace:*"
  },
  "devDependencies": {
    "@types/debug": "^4.1.12",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^3.1.0",
    "agenda": "workspace:*",
    "tsx": "^4.21.0",
    "vitest": "^3.1.0"
  }
}
